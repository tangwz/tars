{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "opener:default",
    "fs:default",
    "fs:read-all",
    {
      "identifier": "fs:scope",
      "allow": ["/**", "[A-Za-z]:/**"]
    },
    "dialog:default",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text",
    "mcp-bridge:default",
    "sql:default",
    "sql:allow-execute"
  ]
}
